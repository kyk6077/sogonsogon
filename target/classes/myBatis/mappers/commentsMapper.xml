<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="CommentsMapper">
  	<select id="boardCommentsCount" parameterType="java.lang.Integer" resultType="java.lang.Integer">
  		select count(cnum) from comments where bnum = #{bnum}
  	</select>
  	
  	<select id="commentsList" parameterType="java.lang.Integer" resultType="CommentsDTO">
  		select * from comments where bnum = #{bnum}
  	</select>
  	
  	<insert id="commentsInsert" parameterType="CommentsDTO">
  		insert into comments (cnum,writer,contents,reg_date,bnum) values (comments_seq.nextval,#{writer},#{contents},sysdate,#{bnum})
  	</insert>
  	
  	<update id="commentsUpdate" parameterType="CommentsDTO">
  		update comments set contents =#{contents} where cnum = #{cnum}
  	</update>
  	
  	<delete id="commentsDelete" parameterType="java.lang.Integer">
  		delete comments where cnum = #{cnum}
  	</delete>
  </mapper>